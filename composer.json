{
    "name": "austinkregel/basement-common",
    "type": "library",
    "description": "",
    "keywords": [
        "thebasement.club"
    ],
    "homepage": "https://github.com/austinkregel/basement-common",
    "license": "MIT",
    "authors": [
        {
            "name": "Austin Kregel",
            "email": "austin@kregel.co",
            "homepage": "https://linkedin.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Kregel\\Basement\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kregel\\Basement\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
